{% include 'header.twig' %}
{% if not logado %}
    <h4>Favor logar para fazer alterações</h4>
{% else %}

    <h1>Nova Categoria</h1>

    <div class="row clearfix">
        <div class="col-md-5">
            <form role="form" action="{{ path() }}categoria/novo" method="post">
                <div class="form-group">
                    <label>Nome: <input type="text" name="nome" class="form-control" size="80"
                                        maxlength="120"></label><br>
                    <label>Descrição:<input type="text" name="descricao" class="form-control" size="80" maxlength="120"></label><br>
                    <button type="submit" class="btn btn-primary" {% if not logado %}disabled="disabled"{% endif %}>
                        Salvar
                    </button>
                    <input type="hidden" name="acao" value="salvar">
                </div>
            </form>
        </div>
    </div>

    <br>

{% endif %}
{% include 'footer.twig' %}