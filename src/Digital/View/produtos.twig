{% include 'header.twig' %}

<h1>Lista de Produtos</h1>
<table class="table table-bordered">
    <tr>
        <th>Nome</th>
        <th>Descricao</th>
        <th>Categoria</th>
        <th>Valor</th>
    </tr>
    {% for produto in produtos %}
    <tr>
        <td>{{ produto.nome }}</td>
        <td>{{ produto.descricao }}</td>
        <td>{{ produto.cat_descricao }}</td>
        <td>{{ produto.valor }}</td>
    </tr>
    {% endfor %}
    </table>
